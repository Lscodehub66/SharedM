 
 (MyTable as table, MyColumnName as text, optional NewNewColNameInput as text) =>
let
    Source = MyTable,
    ShiftedList = {null} &  List.RemoveLastN(Table.Column(Source, MyColumnName),1),
    Custom1 = Table.ToColumns(Source) & {ShiftedList},
     NewColName = if NewNewColNameInput = null then "PreviousRow" else NewNewColNameInput,
    Custom2 = Table.FromColumns(Custom1, Table.ColumnNames(Source) & {NewColName})
in
    Custom2
