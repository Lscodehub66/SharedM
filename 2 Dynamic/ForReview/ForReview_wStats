// let LoadCode = Load("ForReview_wStats","Code"), EVA = Expression.Evaluate(LoadCode ,#shared) in EVA
let
    _input = "wStats",
    _PK = "Check",
    Name = "m" & Text.AfterDelimiter(_input, "w"),
    HD = fx("ForReviewHD")(_input),
    Source = CWB("Filtered_Add"),
    SelfJoined = fx("SelfJoin_R")(Source, CWB("ForReview_" & _input), {_PK}),
    SCol = Table.SelectColumns(SelfJoined, HD, MissingField.UseNull),
    Fn = fx("AddStats2")(SCol),
    Fn2 = fx("NewOrInDB")(Fn),
    Filtered = fx("ForReviewSelect")(Fn2, Name),
    Fn3 = Table.ReplaceValue(
        Filtered, "新增", each if [删除及隐藏] = "【删除】" then "" else "新增", Replacer.ReplaceValue, {"mStats"}
    ),
    Sorted = fx("SortNIndex")(Fn3),
    SCol2 = Table.SelectColumns(Sorted, HD, MissingField.UseNull)
in
    SCol2
