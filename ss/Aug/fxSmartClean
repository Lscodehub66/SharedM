    else if Cleaner = "DDDCN" then
     DDD1
    else if Cleaner = "CrcySuffix" then
     CRCY1
    else if Cleaner = "Role" then
     ROLE1
    else if Cleaner = "Stats" then
     INV1
    else if Cleaner = "123一二三" then
