    else if Cleaner = "123ABC" then
     ABC1
    else if Cleaner = "区县" then
     COUNTY1
    else if Cleaner = "主体" then
     主体1
        else if List.Contains({"IPT","IPG","FPT","FPG","FRN","Price"},Cleaner) then
