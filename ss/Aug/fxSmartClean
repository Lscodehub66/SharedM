     else
     { "" }, 
   List2 = 
   if Cleaner = "Region" or Cleaner = "地区" then
     REG2
    else if Cleaner = "Rtg" then
     RTG2
    else if Cleaner = "Structure" then
     STR2
    else if Cleaner = "品种" then
     品种2
    else if Cleaner = "DDDCN" then
     DDD2
    else if Cleaner = "CrcySuffix" then
     CRCY2
    else if Cleaner = "Role" then
