    ReplacerTable     = Table.Buffer(Table.FromColumns({List1, List2}, {"Find", "Replace"})), 
  FindReplaceList   = Table.ToRows(ReplacerTable), 
  Counter           = Table.RowCount(ReplacerTable), 
  // Re-iterate sub custom function  
  BulkReplaceValues = (TextToReplaceTemp, n) =>
   let
    ReplacedText = Text.Replace(
     TextToReplaceTemp, 
     if FindReplaceList{n}{0} = null then "" else FindReplaceList{n}{0}, 
     if FindReplaceList{n}{1} = null then "" else FindReplaceList{n}{1}
    )
   in
    if n = Counter - 1 then ReplacedText else @BulkReplaceValues(ReplacedText, n + 1), 
  Output            = BulkReplaceValues(TextName, 0)
  in
   Output, 
 //Defining a metadata-record for documentation purpose
 fnType = type function ( TextName as text, Cleaner as ( type text meta [ Documentation.AllowedValues = { "Rtg", "主体","地区", "区县", "Price","Structure", "品种", "DDDCN", "CrcySuffix", "Role", "Stats", "123一二三", "123ABC" } ] ) ) as list
  meta [ Documentation.Name = "fxSmartClean", Documentation.Description = "清洁工有：Rtg、主体、地区、区县、Price、Structure、品种、DDDCN、CrcySuffix、Role、Stats、123一二三、123ABC" ]
in
 Value.ReplaceType ( Source, fnType )