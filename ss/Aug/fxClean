(TextName as text, FindList as list, ReplaceList as list) =>
 let
  ReplacerTable     = Table.Buffer(Table.FromColumns({FindList, ReplaceList}, {"Find", "Replace"})), 
  FindReplaceList   = Table.ToRows(ReplacerTable), 
  Counter           = Table.RowCount(ReplacerTable), 
  // Re-iterate sub custom function  
  BulkReplaceValues = (TextToReplaceTemp, n) =>
   let
    ReplacedText = Text.Replace(
     TextToReplaceTemp, 
     if FindReplaceList{n}{0} = null then "" else FindReplaceList{n}{0}, 
     if FindReplaceList{n}{1} = null then "" else FindReplaceList{n}{1}
    )
   in
    if n = Counter - 1 then ReplacedText else @BulkReplaceValues(ReplacedText, n + 1), 
  Output            = BulkReplaceValues(TextName, 0)
 in
  Output