(TableName as table) =>
  let
    Source = TableName, 
    #"Removed Columns" = Table.RemoveColumns(Source, {"Index"}, MissingField.Ignore), 
    #"Global Sorted" = try
      Table.Buffer(
        Table.Sort(
          #"Removed Columns", 
          {
            {"定价日", Order.Ascending}, 
            {"信用主体", Order.Descending}, 
            {"货币", Order.Descending}, 
            {"年期", Order.Descending}
          }
        )
      )
    otherwise
      Table.Buffer(Table.Sort(#"Removed Columns", {"定价日", Order.Ascending})), 
    #"Added Index" = Table.AddIndexColumn(#"Global Sorted", "Index", 1, 1, Int64.Type), 
    #"Global Reversed" = Table.Sort(#"Added Index", {"Index", Order.Descending}), 
    #"Reorder Index First" = Table.ReorderColumns(
      #"Global Reversed", 
      {"Index"} & List.RemoveMatchingItems(Table.ColumnNames(#"Global Reversed"), {"Index"})
    )
  in
    #"Reorder Index First"