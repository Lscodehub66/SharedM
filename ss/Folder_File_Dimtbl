let
    DimPrefix = "PK",
    Level1 = "Folder",
    Level2 = "File",
    Dimtbl2 = Load(Level2 & "_" & "Dimtbl"),
    Dimtbl1 = Load(Level1 & "_" & "Dimtbl"),
    MergeQ_CN = {DimPrefix & "_" & Level1},
    MergedQ = Table.NestedJoin(Dimtbl2, MergeQ_CN, Dimtbl1, MergeQ_CN, "Data", JoinKind.Inner),
    RemovedQ = Table.RemoveColumns(MergedQ, MergeQ_CN),
    ExpandedQ = Table.ExpandTableColumn(RemovedQ, "Data", Table.ColumnNames(RemovedQ[Data]{0})),
    MergedCol = Table.CombineColumns(
        ExpandedQ,
        {DimPrefix & "_" & Level1, DimPrefix & "_" & Level2},
        Combiner.CombineTextByDelimiter("_", QuoteStyle.None),
        DimPrefix & "_" & Level1 &"_"&Level2
    )
in
    MergedCol
