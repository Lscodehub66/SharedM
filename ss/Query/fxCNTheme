( ESGType as text, 货币细分 as text, 品种主题 as text ) =>
 let
  TextName  = if ESGType <> 货币细分 and 货币细分 = 品种主题 then ESGType & "债券" else if List.Contains( {"AT1","T2","CD"},品种主题) and 货币细分 = "DimSum" then ESGType & 品种主题 else ESGType & 品种主题 & 货币细分, 
  PresentCN = fxCleaner ( TextName, "品种" ), 
  AddSuffix = 
   if not Text.EndsWith ( PresentCN, "债" )
    and not Text.EndsWith ( PresentCN, "券" )
    and not Text.EndsWith ( PresentCN, "据" )
        and not Text.EndsWith ( PresentCN, "股" )  and not Text.EndsWith ( PresentCN, "证" )
    and PresentCN
    <> ""
   then
    PresentCN & "债券"
   else
    PresentCN
 in
  AddSuffix