let
    Source = fx(
        "FdFiles"
    )(
        "Team Folder\Execution Team\Weekly\Ad Hoc\Syndicate",
        "C:\Users\ktkt2\OneDrive\EXE Team\DataHub\Weekly\Ad Hoc\Syndicate"
    ),
    Fn = fx("TransformSyndFiles")(Source),
    Fn2 = fx("Synd_Length")(Fn),
    Joined = fx("DimSynd")(Fn2),
    SCol = Table.SelectColumns(Joined, {"Monday.Text", "Synd.Input", "Description", "Source.Files"}),
    #"Pivoted Column" =
        let
            Source = Table.TransformColumns(SCol, {{"Synd.Input", each "Synd." & _, type text}}),
            Pivoted = Table.Pivot(Source, List.Distinct(Source[Synd.Input]), "Synd.Input", "Description"),
            Sorted = fx("Sort")(Pivoted, {"Monday.Text"}),
            Reordered = Table.ReorderColumns(
                Sorted,
                {
                    "Index",
                    "Monday.Text",
                    "Source.Files",
                    "Synd.Commentary字数",
                    "Synd.UST字数",
                    "Synd.Commentary_Sum",
                    "Synd.Commentary_IG",
                    "Synd.Commentary_LGFV",
                    "Synd.Commentary_HY",
                    "Synd.UST",
                    "Synd.Pipeline"
                },
                MissingField.Ignore
            )
        in
            Reordered
in
    #"Pivoted Column"
