//let LoadCode = Load("wSynd","Code"), EVA = Expression.Evaluate(LoadCode, #shared) in EVA
let
    Source = fx("FdFiles")(fx("ControlWB.PPT_Folder") & "ss & Input"),
    #"Filtered Rows" = Table.SelectRows(Source, each [Extension] = ".txt"),
    IsZero = Table.RowCount(#"Filtered Rows") = 0,
    Fn = fx("TransformSyndFiles")(Source),
    Fn2 = fx("Synd_Length")(Fn),
    Output = if IsZero = true then Load("DimSynd") else fx("DimSynd")(Fn2),
    #"Removed Other Columns" = Table.SelectColumns(
        Output, {"Index", "Synd.Input", "Description", "ObjectName", "Monday.Text", "Source.Files"}
    )
in
    #"Removed Other Columns"
