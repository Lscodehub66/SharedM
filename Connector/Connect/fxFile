// let   FTextInput = "Datahub",    FNumInput = null,
(FTextInput as text, optional FNumInput as text)=>
let
    FDFLSource = Load("Folder_File_Dimtbl"),
    //
    fxFolder = Load("fxFolder"),
    //
    FText = fxFText(FTextInput),
    FNum = Number.From(fxFText(FNumInput)),
    //
    FText_Filtered = Table.SelectRows(
        FDFLSource, each if FText = "" then true else Text_ContainsAny(FText, Text.Split([InputFText], ","))
    ),
    //
    File_Invoked = Table.AddColumn(
        FText_Filtered,
        "Data",
        each
            if FNum <> null then
                fxFolder([Folder_Path], [Name_FText], FNum, "xls")
            else
                fxFolder([Folder_Path], [Name_FText], [InputFNum], "xls")
    ),
    File_SCol = Table.SelectColumns(File_Invoked, {"InputFText", "Data"}),
    File_Expanded = Table.ExpandTableColumn(File_SCol, "Data", Table.ColumnNames(File_SCol[Data]{0}))
in
    File_Expanded
