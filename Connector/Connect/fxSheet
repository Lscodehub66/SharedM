// fxSheet
(TableName as table, optional SkipInput as nullable number, optional FindHeader as text, optional FindKey as text) =>
    let
        Source = TableName,
        Output1 =
            if SkipInput = null then Source else 
                Table.PromoteHeaders(Table.Skip(Source, SkipInput), [PromoteAllScalars = true]),
        Output2 =
            if FindHeader <> "" then
                Load(
                    "fxFindHeader"
                )(
                    Table.SelectRows(Output1, each Record.Field(_, FindHeader) <> null), FindHeader, FindKey
                )
            else
                Output1,
        Output = if SkipInput = null and FindHeader = "" then Output2 else Load("fxRemoveBlankColumns")(Output2)
    in
        Output
