let
    Source = Load("Controller"),
    #"Removed Other Columns" = Table.SelectColumns(Source, {"当前", "上周", "年初"}),
    #"Demoted Headers" = Table.DemoteHeaders(#"Removed Other Columns"),
    #"Transposed Table" = Table.Transpose(#"Demoted Headers"),
    #"Changed Type" = Table.TransformColumnTypes(#"Transposed Table", {{"Column2", type date}}),
    #"Renamed Columns" = Table.RenameColumns(#"Changed Type", {{"Column2", "Date"}, {"Column1", "PK"}})
in
    #"Renamed Columns"
