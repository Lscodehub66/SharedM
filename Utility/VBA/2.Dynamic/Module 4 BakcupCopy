

Sub BakcupCopy()

    Application.ScreenUpdating = False

    Call Copytbl("wNews_Input")

    Worksheets("Backup").Activate
    ActiveSheet.Range("D5:Z100").Select
    Selection.ClearContents
    Selection.ClearFormats

    Call FnBakcupCopy("wIssue")
    Call FnBakcupCopy("wStats")
    Call FnBakcupCopy("wCredit")
    Call FnBakcupCopy( "wChart")
    Call FnBakcupCopy( "wBOCOM")
    Call FnBakcupCopy( "wBond")

    Worksheets("Backup").Columns("G:Z").AutoFit
End Sub

Function FnBakcupCopy(nameinput As String)

    Dim name As String
    Dim nn As Worksheet
    Set nn = Worksheets("Backup")

    If Not nameinput = "wNews_Input" Then Range("ForReview_" & nameinput & "[#All]").Copy Else Range(nameinput & "[#All]").Copy


        nn.Cells(Rows.Count, 4).End(xlUp).Offset(4, 0).PasteSpecial xlPasteValues
        Selection.PasteSpecial Paste:=xlPasteFormats, Operation:=xlNone, _
        SkipBlanks:=False, Transpose:=False

        Application.CutCopyMode = False

End Function

